@require '../node_modules/normalize-css/normalize.css'

asana-gray = #E5E5E5
asana-blue = #1F8DD6

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

body {
  background: radial-gradient(white, asana-gray);
}

.limited-width {
  width: 400px;
}

h1, .loading {
  text-align: center;
}

.col-1-1,
.col-1-4,
.col-2-4,
{
  display:inline-block;
  vertical-align: top;
}

.col-1-1 {
  width: 100%;
}

.col-1-4 {
  width: 25%;
}

.col-2-4 {
  width: 50%;
}

.horizontal-center {
  margin-left: auto;
  margin-right: auto;
}

.github {
  position: absolute;
  bottom: 1px;
  right: 1px;
  font-size: 12px;
}

@require './components/page/Page.styl'
@require './components/person/Person.styl'
@require './components/report_card/ReportCard.styl'
